{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "noUncheckedSideEffectImports": true,
    "paths": {
      "@/*": ["./src/*"],
      "$lib/*": ["./src/lib/*"],
      "$components/*": ["./src/lib/components/ui/*"],
      "$assets/*": ["./src/assets/*"]
    }
  },
  "include": ["vite.config.ts"]
}
